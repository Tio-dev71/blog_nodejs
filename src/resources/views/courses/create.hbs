<form method="POST" action="/courses/store">
  <div class="mb-3">
    <label for="name" class="form-label">Tên khóa học</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      placeholder="Name"
    />
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Mô tả khóa học</label>
    <input
      type="text"
      class="form-control"
      id="description"
      name="description"
      placeholder="Description"
    />
  </div>

  <div class="mb-3">
    <label for="videoId" class="form-label">VideoId</label>
    <input
      type="text"
      class="form-control"
      id="videoId"
      name="videoId"
      placeholder="VideoId"
    />
  </div>

  <button type="submit" class="btn btn-primary">Thêm khóa học</button>
</form>
